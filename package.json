{
  "name": "payslip-generator-api",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "node main.js",
    "build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "heroku-postbuild": "npm run client:install && npm run build",
    "client": "cd client && npm start",
    "server": "env-cmd -r ./.env-cmdrc -e development nodemon main.js",
    "prod": "env-cmd -r ./.env-cmdrc -e production node main.js",
    "dev": "concurrently -n 'server, client' -c 'red,green'  \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "debug": "~2.6.9",
    "email-templates": "^8.0.4",
    "env-cmd": "^10.1.0",
    "esm": "^3.2.25",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "lodash": "^4.17.20",
    "mailgun-js": "^0.22.0",
    "moment": "^2.29.1",
    "morgan": "~1.9.1",
    "multer": "^1.4.2",
    "nodemailer": "^6.6.0",
    "nodemailer-html-to-text": "^3.2.0",
    "numeral": "^2.0.6",
    "pug": "^3.0.2",
    "puppeteer": "^2.1.1"
  },
  "devDependencies": {
    "concurrently": "^6.0.2",
    "detect-port": "^1.3.0",
    "kill-port": "^1.6.1",
    "nodemon": "^2.0.7"
  },
  "engines": {
    "node": "14.8.0"
  },
  "nodemonConfig": {
    "legacyWatch": true,
    "delay": "1500",
    "watch": [
      "."
    ]
  }
}
